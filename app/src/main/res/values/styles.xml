<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ReeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#c5c5c5</item>
        <item name="colorControlHighlight">#c5c5c5</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#000</item>
    </style>

    <style name="ReeTheme.ActionBar.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ReeTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ReeButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

</resources>
